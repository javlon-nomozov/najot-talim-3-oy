<div class="orders-list">
    <h1>Orders List</h1>
    <% if (orders.length === 0) { %>
      <p>No orders found.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Book Title</th>
            <th>Client Name</th>
            <th>Client Phone</th>
            <th>Quantity</th>
            <th>Address</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.bookTitle %></td>
              <td><%= order.clientName %></td>
              <td><%= order.clientPhone %></td>
              <td><%= order.quantity %></td>
              <td><%= order.address %></td>
              <td>$<%= order.totalPrice %></td>
              <td><%= order.status %></td>
              <td>
                <form action="/orders/<%= order.id %>/change-status" method="POST">
                  <select name="status">
                    <option value="new" <%= order.status === 'new' ? 'selected' : '' %>>New</option>
                    <option value="accepted" <%= order.status === 'accepted' ? 'selected' : '' %>>Accepted</option>
                    <option value="on_way" <%= order.status === 'on_way' ? 'selected' : '' %>>On Way</option>
                    <option value="completed" <%= order.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                  </select>
                  <button class="btn" type="submit">Change Status</button>
                </form>
                <br>
                <form action="/orders/<%= order.id %>/delete" method="POST">
                  <button  style="display: inline-block; margin-top: 10px;"  class="btn delete" type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
  