<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link rel="stylesheet" href="/assets/styles.css" />
    <link rel="stylesheet" href="/assets/form.css" />
  </head>
  <body>
    <div class="header">
      <h1>User Management System</h1>
      <div class="navbar">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/users/create">Create User</a></li>
        </ul>
      </div>
    </div>

    <div class="container">
      <% if (data.message) { %>

      <div class="alert" id="alert">
        <span>
          <%- data.message %>
        </span>
        <button class="close-btn" onclick="closeAlert()">X</button>
      </div>
      <% } %>

      <h1>Foydalanuvchilar:</h1>
      <ul>
        <% users.forEach(user => { %>
        <li>
          <a href="/<%= user %>">
            <% if (user == 'smartwatches') { %> Smart soatlar <% } else { %> <%=
            user %> <% } %>
          </a>
        </li>
        <% }); %>
      </ul>

      <div class="navigation">
        <a href="/users/create" class="btn">Create User</a>
      </div>
    </div>

    <script>
      function closeAlert() {
        var alert = document.getElementById("alert");
        alert.style.display = "none";
      }
    </script>
  </body>
</html>
