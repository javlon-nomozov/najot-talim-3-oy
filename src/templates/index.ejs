<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link rel="stylesheet" href="/assets/styles.css" />
    <link rel="stylesheet" href="/assets/form.css" />
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
      <% if (data.message) { %>
        <br>
      <div class="alert" id="alert">
        <span> <%- data.message %> </span>
        <button class="close-btn" onclick="closeAlert()">X</button>
      </div>
      <% } %>
      <div class="item-cards">
        <br>
        <div class="item-card">
          <a href="/users">
            <h2>Users</h2>
          </a>
          <br>
          <a href="/users/create" class="btn">Create User</a>
        </div>
        <div class="item-card">
          <a href="/guides">
            <h2>Guides</h2>
          </a>
          <br>
          <a href="/guides/create" class="btn">Create Guide</a>
        </div>
        <div class="item-card">
          <a href="/todoes">
            <h2>Todoes</h2>
          </a>
          <br>
          <a href="/todoes/create" class="btn">Create Todoes</a>
        </div>
      </div>
    </div>

    <script>
      function closeAlert() {
        var alert = document.getElementById("alert");
        alert.style.display = "none";
      }
    </script>
  </body>
</html>
