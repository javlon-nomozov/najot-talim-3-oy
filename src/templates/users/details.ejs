<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create User</title>
    <link rel="stylesheet" href="/assets/styles.css" />
    <link rel="stylesheet" href="/assets/form.css" />
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <div class="breadcrumb">
      <span class="breadcrumb-item"><a href="/">Home</a></span
      >/ <span class="breadcrumb-item"><a href="/users">Users</a></span
      >/
      <span class="breadcrumb-item">Detail</span>
    </div>
    <div class="container">
      <% if (data.message) { %>

      <div class="alert" id="alert">
        <span><%- data.message %> </span>
        <button class="close-btn" onclick="closeAlert()">X</button>
      </div>
      <% } %>
      <main>
        <section class="user-detail">
          <div class="item-info">
            <h2>User Information</h2>
            <div>
              <strong>First Name:</strong>
              <span id="first-name"><%= user.firstName %></span>
            </div>
            <div>
              <strong>Last Name:</strong>
              <span id="last-name"><%= user.lastName %></span>
            </div>
            <div>
              <strong>Age:</strong>
              <span id="age"><%= user.age %></span>
            </div>
            <div>
              <strong>Role:</strong>
              <span id="role"><%= user.role %></span>
            </div>
            <div>
              <strong>Username:</strong>
              <span id="username"><%= user.username %></span>
            </div>
            <br />
            <a class="btn edit" href="/users/<%= user.id %>/edit">Edit</a>
            <br />
            <br />
            <a class="btn delete" href="/users/<%= user.id %>/delete"> Delete </a>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
