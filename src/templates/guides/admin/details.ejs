<main>
  <section class="guide-detail">
    <div class="item-info">
      <h2>Guide Information</h2>
      <div>
        <strong>Title:</strong>
        <span id="first-name"><%= guide.title %></span>
      </div>
      <div>
        <strong>Content:</strong>
        <span id="last-name"><%- guide.content %></span>
      </div>
      <br />
      <a class="btn edit" href="/guides/<%= guide.id %>/edit">Edit</a>
      <br />
      <br />
      <a class="btn delete" href="/guides/<%= guide.id %>/delete"> Delete </a>
    </div>
  </section>
</main>
